{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Prefix for plan, app"
      }
    },
    "thumbprint": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Certificate thumbprint"
      }
    },
    "instrumentationKey": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "instrumentationKey for app insights"
      }
    }
  },
  "variables": {
    "environment": "[if(empty(parameters('environment')), '',concat('-',parameters('environment')))]",
    "name": "[concat('quizmeister-admin', variables('environment'))]",
    "nameShared": "[concat('quizmeister-shared', variables('environment'))]",
    "hostnamePrefix": "[concat('admin', variables('environment'))]",
    "hostname": "[concat(variables('hostnamePrefix'), '.quizmeister.net')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2018-11-01",
      "name": "[variables('name')]",
      "location": "[resourceGroup().location]",
      "kind": "linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(variables('nameShared'), '-plan'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "NODE|12-lts",
          "appCommandLine": "npx serve -s",
          "appSettings": [
            {
              "name": "ASPNETCORE_ENVIRONMENT",
              "value": "[parameters('environment')]"
            },
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[parameters('instrumentationKey')]"
            }
          ]
        },
        "http20Enabled": true
      }
    },
    {
      "type": "Microsoft.Web/sites/hostNameBindings",
      "apiVersion": "2018-11-01",
      "name": "[concat(variables('name'), '/', variables('hostname'))]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('name'))]"
      ],
      "properties": {
        "sslState": "SniEnabled",
        "thumbprint": "[parameters('thumbprint')]"

      }
    }
  ],
  "outputs": {
  },
  "functions": [
  ]
}
