{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "defaultValue": "",
            "metadata": {
                "description": "Prefix for plan, app"
            }
        }
    },
    "variables": {
        "environment": "[if(empty(parameters('environment')), '',concat('-',parameters('environment')))]",
        "name": "[concat('quizmeister-shared', variables('environment'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[concat(variables('name'), '-plan')]",
            "location": "[resourceGroup().location]",
            "kind": "linux",
            "sku": {
                "name": "B1",
                "tier": "Basic"
            },
            "properties": {
                "name": "[concat(variables('name'), '-plan')]",
                "workerSizeId": "1",
                "reserved": true,
                "numberOfWorkers": "1"
            }
        },
        {
            "type": "Microsoft.Insights/components",
            "apiVersion": "2015-05-01",
            "name": "[variables('name')]",
            "location": "[resourceGroup().location]",
            "kind": "Web",
            "properties": {
                "Application_Type": "web",
                "Request_Source": "rest"
            }
        },
        {
            "type": "Microsoft.Web/certificates",
            "name": "[concat(variables('name'), '-cert')]",
            "apiVersion": "2016-03-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "keyVaultId": "/subscriptions/ab29d196-b8bf-4152-836c-be99f78f6748/resourceGroups/quizmeister-resources/providers/microsoft.keyvault/vaults/quizmeister-vault",
                "keyVaultSecretName": "quizmeister-net",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(variables('name'), '-plan'))]"
            },
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', concat(variables('name'), '-plan'))]"
            ]
        }
    ],
    "outputs": {
        "thumbprint": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Web/certificates', concat(variables('name'), '-cert'))).Thumbprint]"
        },
        "instrumentationKey": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Insights/components', variables('name'))).InstrumentationKey]"
        }
    },
    "functions": [
    ]
}
