{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {
    "name": "quizmeister-quizzes-api",
    "nameShared": "quizmeister-shared",
    "hostname": "quizzes-api.quizmeister.net"
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2018-11-01",
      "name": "[variables('name')]",
      "location": "[resourceGroup().location]",
      "kind": "linux",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(variables('nameShared'), '-plan'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "DOTNETCORE|5.0",
          "appCommandLine": "QuizmeisterApi",
          "alwaysOn": true,
          "http20Enabled": true,
          "cors": {
            "allowedOrigins": [
              "https://admin.quizmeister.net",
              "https://www.quizmeister.net",
              "https://presentation.quizmeister.net"
            ],
            "supportCredentials": true
          },
          "webSocketsEnabled": true,
          "appSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
              "value": "[reference(resourceId('Microsoft.Insights/components', 'quizmeister-shared'), '2015-05-01').InstrumentationKey]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/sites/hostNameBindings",
      "apiVersion": "2018-11-01",
      "name": "[concat(variables('name'), '/', variables('hostname'))]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('name'))]"
      ],
      "properties": {
        "sslState": "SniEnabled",
        "thumbprint": "[reference(resourceId('Microsoft.Web/certificates', 'quizmeister-shared-cert'), '2016-03-01').Thumbprint]"
      }
    }
  ]
}
